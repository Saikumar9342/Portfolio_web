rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null
        && request.auth.token.email == "pasumarthisaikumar6266@gmail.com";
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // Global live portfolio (single public website entrypoint)
    match /content/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Global live projects
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Multi-user portfolios
    match /users/{userId}/content/{docId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/projects/{projectId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    // Public profile metadata for link/domain routing
    match /users/{userId} {
      allow read: if true;
      allow create, update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Username -> user routing map
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && !exists(/databases/$(database)/documents/usernames/$(username));
      allow update: if isAdmin()
        || (isSignedIn()
            && resource.data.userId == request.auth.uid
            && request.resource.data.userId == request.auth.uid);
      allow delete: if isAdmin()
        || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    // Custom domain -> user routing map
    match /domain_mappings/{domain} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin()
        || (isSignedIn()
            && resource.data.userId == request.auth.uid
            && request.resource.data.userId == request.auth.uid);
      allow delete: if isAdmin()
        || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    // Messages / Inquiries
    match /messages/{messageId} {
      allow create: if true; // Guests can send messages
      allow read, update, delete: if isAdmin() 
        || (isSignedIn() && resource.data.targetUserId == request.auth.uid);
    }

    // Languages (Global and User-Specific)
    match /languages/{langId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /users/{userId}/languages/{langId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }
  }
}
