rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    function isAdmin() {
      return request.auth != null
        && request.auth.token.email == "pasumarthisaikumar6266@gmail.com";
    }

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSignedIn() {
      return request.auth != null;
    }

    // Global live portfolio (single public website entrypoint)
    match /content/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Global live projects
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Multi-user portfolios
    match /users/{userId}/content/{docId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    match /users/{userId}/projects/{projectId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    // Public profile metadata
    match /users/{userId} {
      allow read: if true; // Needs to be true for website to load bio/name
      allow create: if isOwner(userId) || isAdmin()
        || (request.resource.data.keys().hasOnly(['totalVisits']) && request.resource.data.totalVisits == 1);
      allow update: if isOwner(userId) || isAdmin() 
        || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalVisits']) && request.resource.data.totalVisits == resource.data.get('totalVisits', 0) + 1);
      allow delete: if isOwner(userId) || isAdmin();
    }

    // Global Analytics (for counting total traffic)
    match /analytics/{docId} {
      allow read: if true;
      allow create: if request.resource.data.keys().hasOnly(['totalVisits']) && request.resource.data.totalVisits == 1;
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['totalVisits']) && request.resource.data.totalVisits == resource.data.get('totalVisits', 0) + 1;
      allow delete: if isAdmin();
    }

    // Username -> user routing map
    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && !exists(/databases/$(database)/documents/usernames/$(username));
      allow update: if isAdmin()
        || (isSignedIn()
            && resource.data.userId == request.auth.uid
            && request.resource.data.userId == request.auth.uid);
      allow delete: if isAdmin()
        || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    // Custom domain -> user routing map
    match /domain_mappings/{domain} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin()
        || (isSignedIn()
            && resource.data.userId == request.auth.uid
            && request.resource.data.userId == request.auth.uid);
      allow delete: if isAdmin()
        || (isSignedIn() && resource.data.userId == request.auth.uid);
    }

    // User-specific messages/inquiries
    match /users/{userId}/messages/{messageId} {
      allow create: if isValidMessage(request.resource.data);
      allow read, delete: if isOwner(userId) || isAdmin();
      allow update: if isAdmin();
    }

    // Global Messages/Inquiries
    match /messages/{messageId} {
      allow create: if isValidMessage(request.resource.data);
      allow read, delete: if isAdmin();
      allow update: if isAdmin();
    }

    // Private user data (FCM tokens, etc)
    match /users/{userId}/private/{docId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Helper for message validation
    function isValidMessage(data) {
      return data.name is string && data.name.size() > 0 && data.name.size() < 100
          && data.email is string && data.email.matches('.+@.+\\..+')
          && data.message is string && data.message.size() > 0 && data.message.size() < 5000;
    }

    // Languages (Global and User-Specific)
    match /languages/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /users/{userId}/languages/{document=**} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    // Language configuration details
    match /languages_config/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId}/languages_config/{document=**} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    // Settings (Global and User-Specific)
    match /settings/{document=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /users/{userId}/settings/{document=**} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }
  }
}
